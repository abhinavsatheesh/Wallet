<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wallet.AddBankAccountPage"
             NavigationPage.HasBackButton="False"
             Title="Add a New Bank Account"
             IconImageSource="wallet_512_512">
    <StackLayout>
        <Label
            Text="Add a New Bank Account"
            FontSize="18"
            HorizontalOptions="Center"/>
        <Label Text=""/>
        <Label 
            Text="Add a Bank Account (just the Name of the Bank is fine), and get going!"
            HorizontalOptions="Center"/>
        <Label Text=""/>
        <Picker 
            x:Name="BankPicker"
            Title="Select a Bank :-"
            TitleColor="Black"
            HorizontalOptions="Center"/>
        <Label Text=""/>
        <Entry
            x:Name="BalanceAccount"
            Placeholder="Enter the Current Balance of this account"
            MaximumWidthRequest="450"
            Keyboard="Numeric"/>
        <Label Text=""/>
        <Button
            Text="Add Bank Account"
            Clicked="Button_Clicked"
            MaximumWidthRequest="200"/>
    </StackLayout>
</ContentPage>
